{
	"modules": [
                {
                "description": "Gets title from URL in text",
                "expression": "http",
                "command": "URL-detection",
                "module": "get_title"
                },
                {
                "description": "Shows module usage and purpose",
                "expression": "^!help",
                "command": "!help <module>",
                "module": "get_help"
                },
                {
                "description": "Lists all available modules",
                "expression": "^!modules$",
                "command": "!modules",
                "module": "get_modules"
                },
                {
                "description": "Usage: !ilm <location>\nFetches weather info for location, default Tallinn",
                "expression": "^!ilm.*",
		"command": "!ilm",
                "module": "get_weather"
                },
                {
                "description": "Usage: !pic keyword\nFetches requested keyword picture URL from tumblr",
                "expression": "^!pic.*",
                "command": "!pic",
                "module": "get_pic"
                }
	}	
}
